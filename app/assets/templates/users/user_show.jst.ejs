<h1><%= user.escape('moniker') %>'s profile</h1>

<% if(user.user_profile){ %>
  <section id="user-profile" class="user-profile group">
  <h2><%= user.escape('moniker') %>'s information:</h2>
  </section>
<% } else { %>
  <h2>This user hasn't entered a profile :(</h2>
<% } %>


<% if(user.user_artworks) { %>
  <h2><%= user.escape('moniker') %>'s favorite artworks:</h2>

  <ul class="artworks-index-medium" id="art-list-0"></ul>
  <ul class="artworks-index-medium" id="art-list-1"></ul>
<% } %>
